<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.borad">


    <!-- selectReplyList 메서드가 호출될 때 실행될 SQL -->
    <!-- 파라미터로 boardId(int)를 받아서 해당 게시글의 댓글만 가져옴 -->
    <select id="selectBoardReplyById" parameterType="int" resultMap="boardReplyVo">
        SELECT replyId, replyCont, replyDate, replyImg, replyLike, boardId
        FROM reply
        WHERE boardId = #{boardId} 
        ORDER BY replyDate ASC 
    </select>



</mapper>