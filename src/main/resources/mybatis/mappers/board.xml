<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="mapper.borad">

    <!-- selectBoard 실행될 때 쓸 SQL -->
    <select id="selectBoardById" parameterType="int" resultMap="boardVo">
        <!-- boardId 값 받아서 글 하나 가져옴 -->
        SELECT boardId, boardCont, boardDate, boardImg, boardLike, boardCount, boardRe
        FROM board
        WHERE boardId = #{boardId}
    </select>

</mapper>